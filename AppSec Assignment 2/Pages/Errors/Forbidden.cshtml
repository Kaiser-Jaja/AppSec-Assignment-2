@page "/Errors/Forbidden"
@model AppSec_Assignment_2.Pages.Errors.ForbiddenModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
  <div class="text-center mt-5">
        <h1 class="display-1 text-warning">403</h1>
    <h2 class="display-6">Access Denied</h2>
     <p class="lead">Sorry, you do not have permission to access this resource.</p>
 <p class="text-muted">You will need to log in with a different account or request access from an administrator.</p>
 
      <div class="mt-4">
      <a asp-page="/Index" class="btn btn-primary">
         <i class="bi bi-house-door"></i> Go to Home
   </a>
    @if (User.Identity?.IsAuthenticated == true)
            {
       <a asp-page="/Account/Logout" class="btn btn-outline-secondary ms-2">
        <i class="bi bi-box-arrow-right"></i> Logout
     </a>
      }
  else
      {
      <a asp-page="/Account/Login" class="btn btn-outline-secondary ms-2">
    <i class="bi bi-box-arrow-in-right"></i> Login
           </a>
      }
   </div>
    </div>
</div>
