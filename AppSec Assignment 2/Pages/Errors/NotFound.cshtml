@page "/Errors/NotFound"
@model AppSec_Assignment_2.Pages.Errors.NotFoundModel
@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container">
    <div class="text-center mt-5">
        <h1 class="display-1 text-danger">404</h1>
 <h2 class="display-6">Page Not Found</h2>
        <p class="lead">Sorry, the page you are looking for does not exist.</p>
  <p class="text-muted">The page may have been moved or deleted, or you may have typed the address incorrectly.</p>
  
   <div class="mt-4">
  <a asp-page="/Index" class="btn btn-primary">
        <i class="bi bi-house-door"></i> Go to Home
        </a>
            @if (User.Identity?.IsAuthenticated == true)
       {
       <a asp-page="/Account/Logout" class="btn btn-outline-secondary ms-2">
        <i class="bi bi-box-arrow-right"></i> Logout
    </a>
    }
   else
     {
          <a asp-page="/Account/Login" class="btn btn-outline-secondary ms-2">
             <i class="bi bi-box-arrow-in-right"></i> Login
         </a>
    }
  </div>
    </div>
</div>
