@page
@model AppSec_Assignment_2.Pages.Account.Verify2FAModel
@{
    ViewData["Title"] = "Two-Factor Verification";
}

<div class="row justify-content-center">
    <div class="col-md-5">
    <h2 class="mb-4">Two-Factor Verification</h2>
   <p class="text-muted">A verification code has been sent to your email address. Please enter the 6-digit code below.</p>

        <div class="alert alert-info">
     <small>The code will expire in 5 minutes. Check your spam folder if you don't see the email.</small>
        </div>

        <form method="post">
         <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

   <div class="mb-3">
    <label asp-for="Input.VerificationCode" class="form-label">Verification Code</label>
     <input asp-for="Input.VerificationCode" class="form-control form-control-lg text-center" 
         maxlength="6" pattern="[0-9]{6}" 
      placeholder="000000" autocomplete="off" autofocus 
        style="letter-spacing: 10px; font-size: 24px;" />
 <span asp-validation-for="Input.VerificationCode" class="text-danger"></span>
            </div>

<input type="hidden" asp-for="Input.RememberMe" />

         <div class="d-grid gap-2">
 <button type="submit" class="btn btn-primary btn-lg">Verify</button>
         </div>
        </form>

       <div class="mt-4 text-center">
      <form method="post" asp-page-handler="ResendOtp">
       <p class="text-muted">Didn't receive the code?</p>
          <button type="submit" class="btn btn-link">Resend Code</button>
     </form>
        </div>

 <div class="mt-3 text-center">
            <a asp-page="/Account/Login" class="text-muted">Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
